<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<%= form_tag({:action=>"search"}) do %>
  <%= text_field_tag "search[username]",@word %>  
  <%= submit_tag "検索" %>  
  <%= link_to "リセット", users_path %>  
<% end %>   


<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.username %></td>
        <td><%= "********" %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'いいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいユーザーを登録する', new_user_path %>
