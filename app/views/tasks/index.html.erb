<p id="notice"><%= notice %></p>

<h1>やること一覧</h1>

<%= form_tag(:action=>'search') do %> 
 <%= collection_select 'search', 'user', User.all, :id, :username, {selected: @search_user, include_blank: "全員"} %> 
 <%= collection_select 'search', 'category', Category.all, :id, :categoryname, {selected: @search_category, include_blank: "全カテゴリー"} %> 
 <%= text_field_tag "search[name]", @search %> 
 <%= submit_tag "検索" %> 
 <%= link_to "リセット", tasks_path %> 
<% end %> 

<table>
  <thead>
    <tr>
      <th>状況</th>
      <th>締切日</th>
      <th>カテゴリー</th>
      <th>やること</th>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.done %></td>
        <td>
	<% if task.done == false && Date.today >= task.due_date %>
          <font color = "red"><%= task.due_date %></font>
	<% else %>
           <%= task.due_date %>
	<% end %>
	</td>
        <td><%= task.category.categoryname %></td>
        <td><%= task.name %></td>
        <td><%= task.user.username %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'いいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい予定を登録する', new_task_path %>
